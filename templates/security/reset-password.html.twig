{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block body %}
    <form method="post" class="form login-form">
        <img src="{{ asset('build/images/store_logo.png') }}" alt="Shop logo">
        <p class="login-form__description">Please enter your email address you are trying to log in to</p>
        <div class="form-row">
            <div class="form-row-unit">
                <label class="form-label" for="email">
                    <span class="form-label-icon material-symbols-outlined">mail</span>
                </label>
                <input type="email" value="" name="email" id="email" class="form-input" autocomplete="email" required autofocus>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('csrf-reset-password') }}"
        >

        {% if resetPasswordErrors is defined %}
            {% for resetPasswordError in resetPasswordErrors %}
                <div class="alert alert-danger">
                    <span class="material-symbols-outlined">error</span>{{ resetPasswordError }}
                </div>
            {% endfor %}
        {% endif %}

        <button class="btn btn-accept" type="submit">
            Send email
        </button>
    </form>
{% endblock %}
