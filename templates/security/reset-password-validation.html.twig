{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block body %}
    <form method="post" class="form login-form">
        <img src="{{ asset('build/images/store_logo.png') }}" alt="Shop logo">
        <p class="login-form__description">Enter a new password</p>
        <div class="form-row">
            <div class="form-row-unit">
                <label class="form-label" for="password">
                    <span class="form-label-icon material-symbols-outlined">password</span>
                </label>
                <input type="password" value="" name="password" id="password" class="form-input" required autofocus>
            </div>
        </div>
        <div class="form-row">
            <div class="form-row-unit">
                <label class="form-label" for="repeatPassword">
                    <span class="form-label-icon material-symbols-outlined">password</span>
                </label>
                <input type="password" value="" name="repeatPassword" id="repeatPassword" class="form-input" required autofocus>
            </div>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('csrf-reset-password') }}"
        >

        {% if resetPasswordErrors is defined %}
            {% for resetPasswordError in resetPasswordErrors %}
                <div class="alert alert-danger">
                    <span class="material-symbols-outlined">error</span>{{ resetPasswordError }}
                </div>
            {% endfor %}
        {% endif %}

        <button class="btn btn-accept" type="submit">
            Change password
        </button>
    </form>
{% endblock %}
