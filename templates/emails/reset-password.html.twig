{% apply inline_css %}
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }
        .container {
            width: 400px;
            padding: 20px;
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        h1 {
            color: #6a11cb;
            font-size: 24px;
            margin-bottom: 15px;
        }
        .link {
            display: inline-block;
            background: #28A745;
            color: #ffffff;
            font-size: 18px;
            padding: 12px 20px;
            border-radius: 8px;
            text-decoration: none;
            transition: background 0.3s;
        }
        .link:hover {
            background: #218838;
        }
        .info {
            display: block;
            margin-top: 10px;
            font-size: 14px;
            color: #666;
        }
    </style>

    <div class="container">
        <h1>Reset Your Password</h1>
        <a class="link" href="{{ link }}">Reset Password</a>
        <span class="info">This link is active for 20 minutes.</span>
    </div>
{% endapply %}
